<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class:"navbar-brand"%>
        
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li><%= link_to "Home", user_path(current_user), class:"nav-link text-light" %></li>
                <li><%= link_to "Users", users_path, class:"nav-link text-light" %></li>
                <li><%= link_to "Books", books_path, class:"nav-link text-light" %></li>
                <li><%= link_to "Log out", destroy_user_session_path, class:"nav-link text-light", method: :delete %></li>
              <% else %>
                <li><%= link_to "Home", root_path, class:"nav-link text-light" %></li>
                <li><%= link_to "About", about_path, class:"nav-link text-light" %></li>
                <li><%= link_to "Sign up", new_user_registration_path, class:"nav-link text-light" %></li>
                <li><%= link_to "Log in", new_user_session_path, class:"nav-link text-light" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <main>
      <!-- success message -->
      <p id="notice"><%= notice %></p>
      
      <%= yield %>
    </main>
    
    <footer>
      <div class="container mt-5">
      	<div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
    
  </body>
</html>