<h2>User info</h2>

<%= form_with model: @user do |f| %>
  <div id="error_explanation">
    <% if @user.errors.any? %>
    	<h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
    	<ul>
    		<% @user.errors.full_messages.each do |message| %>
    		  <li><%= message %></li>
    		<% end %>
    	</ul>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "name" %>
  </div>
  <div class = "field">
    <%= f.label :image %>
    <%= f.file_field :profile_image, class: "image" %>  
  </div>
  <div class="field">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: "introduction" %>
  </div>
  <div class="actions">
    <%= f.submit "Update User", class:"btn btn-sm btn-success" %>
  </div>
<% end %>